{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "NodeNext",
		"target": "ESNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		/* Linting */
		"skipLibCheck": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,

		"composite": true,
		"baseUrl": "./src",
		"rootDir": "./src",
		"outDir": "./dist",
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["./src"]
}
